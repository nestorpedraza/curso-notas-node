<div class="col-md-4 mt-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" value="{{note.titulo}}" name="titulo" class="form-control" placeholder="titulo">
                </div>
                <div class="form-group">
                    <textarea name="descripcion" class="form-control" id="descripcion">{{note.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>