<div class="col-md-4 mt-4 mx-auto">
    <div class="card">
        <div class="card-header">
            Nueva nota
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="titulo" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="descripcion" id="descripcion" class="form-control" placeholder="Descripcion"></textarea>
                </div>
                <div class="form-control">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>