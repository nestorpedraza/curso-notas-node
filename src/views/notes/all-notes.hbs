<div class="row">
    {{#each notes}}
    <div class="col-md-3 mt-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between aling-items-center">{{titulo}} <a href="/notes/edit/{{_id}}">
                        <i class="fas fa-edit"></i>
                    </a></h4>
                <p>{{descripcion}} </p>
                <p>{{fecha}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto mt-4">
        <div class="card-body">
            <h1>Hola {{user.nombre}}!</h1>
            <p class="lead">No hay notas aun!</p>
            <a href="/notes/add" class="btn btn-success btn-block">
                Crea una!
            </a>
        </div>
    </div>
    {{/each}}
</div>